<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:background="@drawable/bg_drawable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgBlood"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ambulans" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSUD Bhayangkara Makassar"
                android:textColor="#2E2B2B"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvAlamatRS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Sangkuriang (363 Km)"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStokDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stok Darah : 33"
                android:textColor="#E84242"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
