<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="space-between|center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="Welcome to Sadar App"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Search for something"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_sadar_logo"
                    android:contentDescription="App Logo" />
            </LinearLayout>

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Search..."
                    android:padding="12dp"
                    android:background="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="8dp"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <!-- Banner Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_sadar"
                android:contentDescription="Emergency Banner" />

            <!-- Feature Title -->
            <TextView
                android:text="Sadar App Feature"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Feature Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginTop="12dp"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- First Aid -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:backgroundTint="#5B5FA0"
                    android:background="@drawable/feature_card1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_first_aid"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <TextView
                        android:text="Pertolongan Pertama"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Order Ambulance -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:backgroundTint="#3D72B3"
                    android:background="@drawable/feature_card2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_oxygen"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <TextView
                        android:text="Order Ambulans"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Cari Tabung Oksigen -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:backgroundTint="#278F6B"
                    android:background="@drawable/feature_card3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_oxygen"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <TextView
                        android:text="Cari Tabung Oksigen"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Cari Kantong Darah -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:backgroundTint="#E03C49"
                    android:background="@drawable/feature_card4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/ic_blood"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <TextView
                        android:text="Cari Kantong Darah"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        android:background="#FFFFFF" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
