<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:contentDescription="Back" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="32dp"
            android:textColor="#000000" />

        <!-- Facebook Button -->
        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONTINUE WITH FACEBOOK"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B5998"
            android:drawableLeft="@drawable/ic_facebook"
            android:layout_marginTop="32dp"
            android:background="@drawable/white_rounded_button" />/>

        <!-- Google Button -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONTINUE WITH GOOGLE"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_google"
            android:layout_marginTop="16dp"
            android:background="@drawable/red_rounded_button" />

        <!-- OR Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR LOG IN WITH EMAIL"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="24dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email address"
            android:fontFamily="@font/poppins_light"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background" />

        <!-- Password -->

        <!-- Privacy Policy Checkbox -->

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:drawableEnd="@drawable/ic_eye"
            android:hint="Password"
            android:fontFamily="@font/poppins_light"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkboxPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i have read the "
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/linkPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="12sp"
                android:textColor="#3B6EF6"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOG IN"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E30030"
            android:layout_marginTop="24dp"
            android:background="@drawable/red_rounded_button" />

    </LinearLayout>
</ScrollView>
